{
  "author": "Palisadoes Foundation",
  "type": "module",
  "bugs": {
    "url": "https://github.com/PalisadoesFoundation/talawa-plugin/issues"
  },
  "description": "Microkernel-based plugin system for extending Talawa with modular features across API, Admin, and Mobile.",
  "engines": {
    "node": ">=20.1.0"
  },
  "devDependencies": {
    "@ant-design/icons": "^6.1.0",
    "@apollo/client": "^4.0.10",
    "@clack/prompts": "^0.11.0",
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "adm-zip": "^0.5.16",
    "antd": "^6.1.3",
    "chalk": "^5.6.2",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-tsdoc": "^0.5.0",
    "eslint-plugin-vitest": "^0.5.4",
    "fast-glob": "^3.3.3",
    "graphql": "^16.12.0",
    "graphql-tag": "^2.12.6",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "knip": "^5.78.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "react": "^18",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18",
    "react-router-dom": "^6",
    "react-toastify": "^11.0.5",
    "tsc-files": "^1.1.4",
    "tsx": "^4.21.0",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "^4.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^6.3.6",
    "vite-plugin-istanbul": "^7.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json,json5,scss,css,yaml,yml}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "drizzle-orm": "^0.44.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "razorpay": "^2.9.6",
    "react-i18next": "^16.5.0",
    "zod": "^4.1.13"
  },
  "homepage": "https://github.com/PalisadoesFoundation/talawa-plugin#readme",
  "license": "GNU General Public License v3.0",
  "name": "talawa-plugin",
  "packageManager": "pnpm@10.4.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "husky"
    ]
  },
  "version": "1.0.1",
  "scripts": {
    "init-plugin": "tsx ./scripts/init/index.ts",
    "zip-plugin": "tsx ./scripts/zip/index.ts",
    "validate:plugins": "node scripts/validate-plugin-directories.mjs",
    "lint:check": "npm run validate:plugins && eslint \"**/*.{ts,tsx}\" --max-warnings=0",
    "lint:fix": "npm run validate:plugins && eslint --fix \"**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,json,json5,scss,css,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,json5,scss,css,yaml,yml}\"",
    "check-i18n": "node scripts/check-i18n.js",
    "check-tsdoc": "node .github/workflows/scripts/check-tsdoc.js",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "postgenerate-docs": "find docs/docs/auto-docs -name 'README.md' -delete && node scripts/docs/fix-repo-url.js",
    "generate-docs": "typedoc && npm run postgenerate-docs && node scripts/docs/fix-readme-links.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "keywords": []
}
