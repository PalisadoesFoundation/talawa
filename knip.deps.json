{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "scripts/**/*.{ts,js}",
    "plugins/**/index.{ts,tsx}",
    "docs/**/*.{ts,tsx}",
    ".github/workflows/scripts/*.{js,ts}"
  ],
  "ignore": [
    "node_modules/**",
    "build/**",
    "coverage/**",
    "**/*.d.ts",
    "**/pnpm-lock.yaml"
  ],
  "project": ["**/*.{ts,tsx,js,jsx,json}", "**/*.{md,mdx}"],
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": [
    "@types/react-dom",
    "vite",
    "vite-plugin-istanbul",
    "vite-plugin-svgr",
    "vitest",
    "eslint-config-prettier",
    "eslint-plugin-import",
    "eslint-plugin-jest",
    "eslint-plugin-prettier",
    "eslint-plugin-react",
    "eslint-plugin-tsdoc",
    "eslint-plugin-vitest",
    "tsc-files",
    "i18next-browser-languagedetector",
    "i18next-http-backend"
  ]
}
